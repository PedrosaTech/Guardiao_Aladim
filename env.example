# Configurações do Django
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Banco de dados
# Para desenvolvimento com SQLite, deixe DATABASE_URL vazio
# Para produção com PostgreSQL, configure DATABASE_URL
# DATABASE_URL=postgresql://user:password@localhost:5432/guardiao_aladin

# Criptografia LGPD - Chave para criptografar dados sensíveis (CPF, CNPJ, telefone, etc.)
# Deve ter no mínimo 32 caracteres. Se tiver menos, será derivada via SHA256.
# Use uma chave segura e aleatória em produção!
ENCRYPTION_KEY=your-secret-encryption-key-minimum-32-characters-long-change-me

